#!/bin/sh
set -e

PACKAGE_NAME=xone
PACKAGE_VERSION=@VERSION@

case "$1" in
	purge)
		rm -f /lib/modules/*/kernel/drivers/input/joystick/xone*.ko* 2>/dev/null || true
		rm -f /lib/modules/*/extra/xone*.ko* 2>/dev/null || true
		rm -f /lib/modules/*/updates/dkms/xone*.ko* 2>/dev/null || true
		if command -v depmod > /dev/null; then
			depmod -a 2>/dev/null || true
		fi
		;;

	remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
		;;

	*)
		echo "postrm called with unknown argument \`$1'" >&2
		exit 1
		;;
esac

#DEBHELPER#

exit 0
